{
	if (flare_count == 1) piecenum = flare1;
	if (flare_count == 2) piecenum = flare2;
	if (flare_count == 3) piecenum = flare3;
	if (flare_count == 4) piecenum = flare4;
	if (flare_count == 5) piecenum = flare5;
	if (flare_count == 6) piecenum = flare6;
	if (flare_count == 7) piecenum = flare7;
	if (flare_count == 8) piecenum = flare8;
	if (flare_count == 9) piecenum = flare9;
