#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, turret, lloarm, flare1, flare2, flare3, flare4, flare5, flare6, flare7, flare8, flare9;

static-var  restore_delay;
static-var  flare_count;

// Signal definitions
#define SIG_AIM				2

