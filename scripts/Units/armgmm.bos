
#include "exptype.h"

piece  base, smoke;

#define SIGNAL_TURNON 4

SteamVents()
{
	signal SIGNAL_TURNON;
	set-signal-mask SIGNAL_TURNON;
	while( TRUE )
	{
		emit-sfx 257 from smoke;
		sleep 500;
	}
}

Create()
{
	hide smoke;
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 250;
	}

	start-script Activate();
}

#define SMOKEPIECE base
#include "smokeunit_thread_nohit.h"

Activate()
{
	set ARMORED to 0;
	start-script SteamVents();
}

Deactivate()
{
	signal SIGNAL_TURNON;
	set ARMORED to 1;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode smoke type BITMAPONLY | NOHEATCLOUD;
		return(corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode smoke type FIRE | SMOKE | FALL | NOHEATCLOUD;
		return(corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode smoke type FIRE | SMOKE | FALL | NOHEATCLOUD;
		return(corpsetype);
	}
	corpsetype = 3 ;
		explode base type BITMAPONLY | NOHEATCLOUD;
		explode smoke type EXPLODE_ON_HIT | FIRE | SMOKE | FALL | NOHEATCLOUD;
	return corpsetype;
}
