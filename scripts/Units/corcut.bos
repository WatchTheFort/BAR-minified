#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, flare1, flare2, thrusta, thrustb, fan1, fan2, duct1, duct2;

static-var  Static_Var_1, bMoving, gun_1, statechg_DesiredState, statechg_StateChanging;


